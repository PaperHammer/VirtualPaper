<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.DraftPanel.Views.WorkSpace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.DraftPanel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:container="using:VirtualPaper.UIComponent.Container"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <MenuBar>
            <MenuBarItem 
                Title="文件(F)"
                KeyboardAcceleratorPlacementMode="Hidden">
                <MenuBarItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Menu" Key="F"/>
                </MenuBarItem.KeyboardAccelerators>

                <MenuFlyoutItem Text="新建">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="添加">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="D"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="打开">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="保存">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="退出">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="F4"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem 
                Title="编辑(E)"
                KeyboardAcceleratorPlacementMode="Hidden">
                <MenuBarItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Menu" Key="E"/>
                </MenuBarItem.KeyboardAccelerators>

                <MenuFlyoutItem Text="撤销">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Z"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="还原">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control, Shift" Key="Z"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator />

                <MenuFlyoutItem Text="剪切">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="X"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="复制">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="粘贴">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem 
                Title="图像(I)"
                KeyboardAcceleratorPlacementMode="Hidden">
                <MenuBarItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Menu" Key="I"/>
                </MenuBarItem.KeyboardAccelerators>


            </MenuBarItem>

            <MenuBarItem 
                Title="图层(L)"
                KeyboardAcceleratorPlacementMode="Hidden">
                <MenuBarItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Menu" Key="L"/>
                </MenuBarItem.KeyboardAccelerators>


            </MenuBarItem>

            <MenuBarItem 
                Title="帮助(H)"
                KeyboardAcceleratorPlacementMode="Hidden">
                <MenuBarItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Menu" Key="H"/>
                </MenuBarItem.KeyboardAccelerators>

                <MenuFlyoutItem Text="关于">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="None" Key="A"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>

        <Grid
            x:Name="toolConfigGrid"
            Grid.Row="1">

        </Grid>

        <Grid
            x:Name="contentGrid"
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Grid
                x:Name="toolsGrid">

            </Grid>

            <Grid
                x:Name="mainGrid"
                Grid.Column="1">
                <!--<container:SelectableItemsControl 
                    x:Name="SelectableItems"/>-->
                <TabView
                    x:Name="TabViewControl"                    
                    TabWidthMode="SizeToContent"
                    CloseButtonOverlayMode="OnPointerOver"
                    TabItemsSource="{Binding TabViewItems}"
                    AddTabButtonClick="TabViewControl_AddTabButtonClick"
                    TabCloseRequested="TabViewControl_TabCloseRequested">
                    <!--<TabView.TabItems>
                        <TabViewItem Header="Document 0">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Placeholder" />
                            </TabViewItem.IconSource>
                            <Page/>
                        </TabViewItem>
                        <TabViewItem Header="Document 1">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Placeholder" />
                            </TabViewItem.IconSource>
                            <Page/>
                        </TabViewItem>
                        <TabViewItem Header="Document 2">
                            <TabViewItem.IconSource>
                                <SymbolIconSource Symbol="Placeholder" />
                            </TabViewItem.IconSource>
                            <Page/>
                        </TabViewItem>
                    </TabView.TabItems>-->

                </TabView>
            </Grid>

            <Grid
                x:Name="detailsGrid"
                Grid.Column="2">

            </Grid>
        </Grid>
    </Grid>
</Page>
