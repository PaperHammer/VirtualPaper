<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.AccountPanel.Views.UserCenterComponents.CloudLib"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.AccountPanel.Views.UserCenterComponents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:VirtualPaper.Models.Cores.Interfaces"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <Style x:Key="LibGridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewItem">
                        <Grid x:Name="RootGrid" Background="Transparent">
                            <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                <ContentPresenter 
                                    x:Name="ContentPresenter"
                                    RenderTransformOrigin="0.5 0.5"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}">
                                    <ContentPresenter.RenderTransform>
                                        <CompositeTransform x:Name="ContentPresenterTransform" ScaleX="1" ScaleY="1"/>
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Grid>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ContentPresenterTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.0"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ContentPresenterTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.0"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ContentPresenterTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.85"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ContentPresenterTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.85"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <GridView
        x:Name="wallpapersLibView"
        Margin="5 0 5 10"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        VerticalContentAlignment="Top"
        HorizontalContentAlignment="Left"
        ItemsSource="{x:Bind _viewModel.CloudLibWallpapers, Mode=OneWay}"
        Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" 
        AllowDrop="False"
        SelectionMode="None" 
        IsItemClickEnabled="True"
        ItemContainerStyle="{StaticResource LibGridViewItemStyle}"
        ItemClick="GridView_ItemClick"
        RightTapped="GridView_RightTapped"       
        PreviewKeyDown="ItemsViewer_PreviewKeyDown">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="models:IWpBasicData">
                <StackPanel
                    Orientation="Vertical"
                    Width="320"
                    MaxWidth="320"
                    Height="230">
                    <Image
                        Source="{x:Bind ThumbnailPath}"
                        Height="200"
                        Width="320"
                        Stretch="Uniform" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        ImageFailed="Image_ImageFailed"/>
                    <TextBlock 
                        Height="25"
                        Text="{x:Bind Title}"
                        MaxLines="2"
                        FontSize="16"
                        TextWrapping="Wrap"
                        HorizontalTextAlignment="Left"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                </StackPanel>
            </DataTemplate>
        </GridView.ItemTemplate>
        <GridView.ContextFlyout>
            <MenuFlyout
                x:Name="ItemsViewMenu">
                <MenuFlyoutItem
                    x:Name="DetailsAndEdit"
                    Text="{x:Bind _viewModel.MenuFlyout_Text_DetailAndEditInfo}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem 
                    x:Name="Preview"                         
                    Text="{x:Bind _viewModel.MenuFlyout_Text_Preview}"
                    Click="ContextMenu_Click" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8A1;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem 
                    x:Name="Download" 
                    Text="{x:Bind _viewModel.MenuFlyout_Text_Downlaod}"
                    Click="ContextMenu_Click" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8FB;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Name="DeleteFromCloud"
                    Text="{x:Bind _viewModel.MenuFlyout_Text_Delete}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon 
                            Glyph="&#xE74D;" 
                            Foreground="Goldenrod"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </GridView.ContextFlyout>
    </GridView>
</Page>
