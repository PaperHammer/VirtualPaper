<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.DraftPanel.Views.GetStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.DraftPanel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:proj="using:VirtualPaper.Models.ProjectPanel"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <DataTemplate  x:Key="RecentUsedItemTemplate" x:DataType="proj:RecentUsed">
            <ListViewItem>
                <Grid Margin="4 10 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <FontIcon 
                        Glyph="{x:Bind Glyph}"
                        VerticalAlignment="Top"
                        Margin="0 4 10 0"/>

                    <StackPanel
                        Grid.Column="1"
                        Spacing="6">

                        <Grid>
                            <TextBlock
                                Text="{x:Bind ProjectName}"
                                FontWeight="Bold"
                                FontSize="16"/>
                            <TextBlock 
                                Text="{x:Bind DateTime}"
                                HorizontalAlignment="Right"/>
                        </Grid>

                        <TextBlock
                            Grid.Row="1"
                            FontSize="12"
                            Text="{x:Bind FilePath}"/>
                    </StackPanel>
                </Grid>
            </ListViewItem>
        </DataTemplate>

        <DataTemplate  x:Key="StartupItemTemplate" x:DataType="proj:Startup">
            <ItemContainer
                Margin="0 0 0 4"
                Background="White">
                <Grid Margin="15 10 4 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <FontIcon 
                        FontSize="30"
                        Margin="0 4 10 0"
                        Glyph="{x:Bind Glyph}"
                        VerticalAlignment="Top"/>

                    <StackPanel
                        Grid.Column="1"
                        Spacing="4">

                        <TextBlock
                            Text="{x:Bind Title}"
                            FontWeight="Bold"
                            FontSize="16"/>

                        <TextBlock
                            FontSize="12"
                            TextWrapping="Wrap"
                            Text="{x:Bind Desc}"/>
                    </StackPanel>
                </Grid>
            </ItemContainer>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="GetStartGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.60*"/>
            <ColumnDefinition Width="0.04*"/>
            <ColumnDefinition Width="0.36*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="RecentlyUsedGrids">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="{Binding Project_RecentUsed}"
                FontSize="20"/>

            <TextBox 
                Grid.Row="1"
                x:Name="TargetName"
                Margin="0 20 0 0"
                Height="30"
                Width="340"
                PlaceholderText="{Binding Project_SearchRecentUsed}"
                FontSize="12"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                TextChanged="OnFilterChanged"/>

            <ListView
                Grid.Row="2"
                Margin="0 20 0 0"
                VerticalAlignment="Top"
                ItemsSource="{Binding RecentUseds}"
                ItemTemplate="{StaticResource RecentUsedItemTemplate}"
                SelectionMode="None"
                IsItemClickEnabled="True"
                ItemClick="RecentUsedsListView_ItemClick"/>
        </Grid>

        <Grid
            x:Name="StartUseGrid"
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="{Binding Project_StartUp}"
                FontSize="20"/>

            <ItemsView
                Grid.Row="1"
                Margin="0 20 0 0"
                ItemsSource="{Binding Startups}"
                ItemTemplate="{StaticResource StartupItemTemplate}"
                SelectionMode="None"
                IsItemInvokedEnabled="True"
                ItemInvoked="StartupItemsView_ItemInvoked"/>

            <HyperlinkButton
                Grid.Row="2"
                Margin="0 4 0 0"
                HorizontalAlignment="Center"
                FontSize="12"
                Click="ContinueWithoutAny_HyperlinkButton_Click"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                Content="{Binding Project_ContinueWithoutFile}"/>
        </Grid>
    </Grid>

</Page>
