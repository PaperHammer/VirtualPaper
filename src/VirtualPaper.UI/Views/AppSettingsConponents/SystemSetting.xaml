<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.UI.Views.AppSettingsConponents.SystemSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.UI.Views.AppSettingsConponents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollView>
        <StackPanel
            Margin="15 0 15 15"
            Orientation="Vertical">

            <StackPanel
                x:Name="Developer"
                Orientation="Vertical">

                <TextBlock
                    x:Name="DeveloperHeader"
                    Margin="0 10"
                    Text="{Binding Text_Developer}"   
                    FontWeight="Bold"/>

                <Grid
                    x:Name="Debug"
                    Height="90"
                    Margin="0 5"
                    Padding="20 0"
                    Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0" 
                        Margin="0 0 20 0"
                        Glyph="&#xEC7A;"/>

                    <Grid
                        Grid.Column="1"
                        VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Grid.Row="0" 
                            Text="{Binding Developer_Debug}"/>
                        <TextBlock 
                            Grid.Row="1" 
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="{Binding Developer_DebugExplain}"/>
                    </Grid>

                    <Button
                        Grid.Column="2"
                        Width="200"
                        Content="{Binding Debug}" 
                        Click="DebugButton_Click"/>
                </Grid>

                <Grid
                    x:Name="Log"
                    Height="90"
                    Margin="0 5"
                    Padding="20 0"
                    Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon   
                        Grid.Column="0" 
                        Margin="0 0 20 0"
                        Glyph="&#xE9F9;"/>

                    <Grid
                        Grid.Column="1"
                        VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Grid.Row="0" 
                            Text="{Binding Developer_Log}"/>
                        <TextBlock 
                            Grid.Row="1" 
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="{Binding Developer_LogExplain}"/>
                    </Grid>

                    <Button
                        Grid.Column="2"
                        Width="200"
                        Content="{Binding Log}" 
                        Click="LogButton_Click"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollView>
</Page>
