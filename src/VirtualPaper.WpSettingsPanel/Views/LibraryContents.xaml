<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.WpSettingsPanel.Views.LibraryContents"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.WpSettingsPanel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    NavigationCacheMode="Enabled">

    <ItemsView
        x:Name="ItemsViewer"
        Margin="5 0 5 10"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        VerticalContentAlignment="Top"
        HorizontalContentAlignment="Left"
        ItemsSource="{Binding LibraryWallpapers}"
        AllowDrop="True"
        DragOver="ItemsView_DragOver"
        Drop="ItemsView_Drop"
        SelectionMode="Single"
        PointerPressed="ItemsViewer_PointerPressed"
        RightTapped="ItemsView_RightTapped"
        Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" 
        PreviewKeyDown="ItemsViewer_PreviewKeyDown">
        <ItemsView.ItemTemplate>
            <DataTemplate>
                <ItemContainer
                    PointerEntered="ItemGrid_PointerEntered"
                    PointerExited="ItemGrid_PointerExited">
                    <StackPanel
                        Orientation="Vertical"
                        Width="320"
                        MaxWidth="320"
                        Height="230">

                        <Image
                            Source="{Binding ThumbnailPath}"
                            Height="200"
                            Width="320"
                            Stretch="Uniform" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"
                            ImageFailed="Image_ImageFailed"/>

                        <TextBlock 
                            Height="25"
                            Text="{Binding Title}"
                            MaxLines="2"
                            FontSize="16"
                            TextWrapping="Wrap"
                            HorizontalTextAlignment="Left"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </ItemContainer>
            </DataTemplate>
        </ItemsView.ItemTemplate>
        <ItemsView.Layout>
            <UniformGridLayout
                Orientation="Horizontal"
                MinRowSpacing="15" 
                MinColumnSpacing="15"/>
        </ItemsView.Layout>
        <ItemsView.ContextFlyout>
            <MenuFlyout
                x:Name="ItemsViewMenu">
                <MenuFlyoutItem
                    x:Name="Details"
                    Text="{Binding MenuFlyout_Text_DetailedInfo}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Name="UpdateConfig"
                    Text="{Binding MenuFlyout_Text_Update}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE753;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Name="Edit"
                    Text="{Binding MenuFlyout_Text_EditInfo}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE70F;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem 
                    x:Name="Preview"                         
                    Text="{Binding MenuFlyout_Text_Preview}"
                    Click="ContextMenu_Click" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8A1;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem 
                    x:Name="Apply" 
                    Text="{Binding MenuFlyout_Text_Apply}"
                    Click="ContextMenu_Click" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8FB;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem 
                    x:Name="LockBackground" 
                    Text="{Binding MenuFlyout_Text_ApplyToLockBG}"
                    Click="ContextMenu_Click" >
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xEE3F;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Name="ShowOnDisk"
                    Text="{Binding MenuFlyout_Text_ShowOnDisk}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xED25;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Name="DeleteFromDisk"
                    Text="{Binding MenuFlyout_Text_Delete}"
                    Click="ContextMenu_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon 
                            Glyph="&#xE74D;" 
                            Foreground="Goldenrod"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </ItemsView.ContextFlyout>
    </ItemsView>

</Page>
