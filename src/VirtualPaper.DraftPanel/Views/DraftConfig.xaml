<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.DraftPanel.Views.DraftConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.DraftPanel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:VirtualPaper.UIComponent.Data"
    mc:Ignorable="d"
    xmlns:cvs="using:VirtualPaper.UIComponent.Converters"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <cvs:BooleanToVisibilityConverter x:Key="BoolToVisiblity"/>
    </Page.Resources>

    <data:Card x:Name="DraftPanelCard">
        <Grid x:Name="DraftConfigGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Text="{Binding Project_DeployNewDraft}"
                FontSize="20"/>

            <StackPanel
                Grid.Row="1"
                Margin="0 20 0 0"
                Orientation="Vertical"
                Spacing="20">
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Spacing="6">
                    <TextBlock
                        Text="{Binding Project_NewDraftName}"
                        FontSize="12"/>

                    <TextBox
                        IsSpellCheckEnabled="False"
                        Text="{Binding DraftName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="{Binding Project_NewDraftName_Placeholder}"
                        FontSize="12"
                        Width="500"/>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4"
                        Margin="2 0 0 0"
                        Visibility="{Binding IsNameOk, Converter={StaticResource BoolToVisiblity}, ConverterParameter=Reverse}">
                        <FontIcon 
                            FontSize="14"
                            VerticalAlignment="Bottom"
                            Foreground="Red"
                            Glyph="&#xE783;" />

                        <TextBlock
                            Text="{Binding Project_NewDraftName_InvalidTip}"
                            FontSize="12"
                            Foreground="Red"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Spacing="6">
                    <TextBlock
                        Text="{Binding Project_NewDraftPosition}"
                        FontSize="12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            IsSpellCheckEnabled="False"
                            Text="{Binding StorageFolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Width="500"
                            HorizontalContentAlignment="Left"/>

                        <Button
                            x:Name="ChangeFolderButton"
                            Grid.Column="1"
                            Margin="10 0"
                            ToolTipService.ToolTip="{Binding Project_NewDraftPosition_BrowserFolder_Tooltip}"
                            Click="ChangeFolderButton_Click">
                            <Button.Content>
                                <FontIcon Glyph="&#xE838;" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="4"
                        Margin="2 0 0 0"
                        Visibility="{Binding IsFolderPathOk, Converter={StaticResource BoolToVisiblity}, ConverterParameter=Reverse}">
                        <FontIcon 
                            FontSize="14"
                            VerticalAlignment="Bottom"
                            Foreground="Red"
                            Glyph="&#xE783;" />

                        <TextBlock
                            Text="{Binding Project_NewDraftPosition_InvalidTip}"
                            FontSize="12"
                            Foreground="Red"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    Text="{Binding DeployNewDraft_Desc}"
                    FontSize="12"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="6">
                    <Button
                        Content="{Binding Project_DeployNewDraft_PreviousStep}"
                        Click="PreviousStepButton_Click"
                        FontSize="12"/>

                    <Button
                        Content="{Binding Project_DeployNewDraft_Create}"
                        IsEnabled="{Binding IsNextEnable}"
                        Width="100"
                        Click="CreateVpdButton_Click"
                        FontSize="12"
                        Background="{ThemeResource AccentAcrylicBackgroundFillColorDefaultBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </data:Card>
</Page>
