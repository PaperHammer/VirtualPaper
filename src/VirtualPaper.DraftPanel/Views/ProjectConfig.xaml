<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VirtualPaper.DraftPanel.Views.ProjectConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualPaper.DraftPanel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:draft="using:VirtualPaper.Models.DraftPanel"
    xmlns:cvs="using:VirtualPaper.UIComponent.Converters"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <cvs:ImgKeyConverters x:Key="ImgKeyConverters"/>

        <DataTemplate  x:Key="AvailableItemTemplate" x:DataType="draft:ProjectTemplate">
            <ListViewItem>
                <Grid Margin="4 10 10 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Image 
                        Width="40"
                        Height="40"
                        Source="{x:Bind ItemImageKey, Converter={StaticResource ImgKeyConverters}}"
                        Margin="0 0 10 0"/>

                    <TextBlock
                        Grid.Column="1"
                        FontSize="14"
                        Margin="0 -2 0 0"
                        VerticalAlignment="Center"
                        Text="{x:Bind Name}"/>
                </Grid>
            </ListViewItem>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="ProjectTemplateConfigGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="{Binding Project_TemplateConfig}"
            FontSize="20"/>

        <Grid 
            x:Name="AvailableTemplatesGrid"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.60*"/>
                <ColumnDefinition Width="0.04*"/>
                <ColumnDefinition Width="0.36*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="TemplatesGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
               
                <TextBox 
                    x:Name="TargetName"
                    Margin="0 20 0 0"
                    Height="30"
                    Width="340"
                    PlaceholderText="{Binding Project_SearchTemplate}"
                    FontSize="12"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    TextChanged="OnFilterChanged"/>

                <ListView
                    Grid.Row="1"
                    Margin="0 20 0 0"                    
                    ItemsSource="{Binding AvailableTemplates}"
                    ItemTemplate="{StaticResource AvailableItemTemplate}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"/>
            </Grid>

            <Grid
                Margin="0 20 0 0"
                x:Name="DetailsGrid"
                Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Image
                    Width="320"
                    Height="200"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Source="{Binding SelectedTemplate.DescImageKey, Converter={StaticResource ImgKeyConverters}}"/>

                <TextBlock
                    Grid.Row="1"
                    Margin="0 10"
                    Text="{Binding SelectedTemplate.Desc}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="6">
                <Button
                    Content="{Binding Project_DeployNewDraft_PreviousStep}"
                    Click="PreviousStepButton_Click"
                    FontSize="12"/>

                <Button
                    Content="{Binding Project_DeployNewDraft_NextStep}"
                    IsEnabled="{Binding IsNextEnable}"
                    Width="100"
                    Click="NextStepButton_Click"
                    FontSize="12"
                    Background="{ThemeResource AccentAcrylicBackgroundFillColorDefaultBrush}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
